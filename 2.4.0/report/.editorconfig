[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,vue,html}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json}]
indent_style = space
indent_size = 2
